<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

    <hibernate-configuration>
        <session-factory>
            <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
            <property name="hibernate.connection.url">jdbc:mysql://localhost/pedidosfab</property>
            <!--  Cambiar basededatos por nombre de la base de datos  -->
            <property name="hibernate.connection.username">root</property>
            <!--  Nombre de usuario de la base de datos  -->
            <property name="hibernate.connection.password">root</property>
            <!--  ContraseÃ±a de usuario de la base de datos  -->
            <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
            <property name="hibernate.show_sql">true</property>
            <!--  Se registran las clases que hay que mapear con cada tabla de la base de datos. Ejemplo:   -->
            <!--  <mapping class="com.example.Construcciones"/> -->
            <mapping class="org.iesabatos.dam.fabricacion.Fabrica"/>
            <mapping class="org.iesabatos.dam.fabricacion.Pedido"/>
            <mapping class="org.iesabatos.dam.fabricacion.Articulo"/>
            <!--  Fin registro de clases mapeadas  -->
        </session-factory>
    </hibernate-configuration>
